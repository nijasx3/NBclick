{% extends 'base.html.twig' %}

{% block title %}Matchs NBA
{% endblock %}

{% block body %}
	<h1 class="text-2xl font-bold mb-4">Matchs NBA du 26 janvier 2025</h1>

	{% if games is empty %}
		<p class="text-gray-500">Aucun match trouvé.</p>
	{% else %}
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
			{% for game in games %}
				<div
					class="shadow-lg rounded-lg p-4 flex items-center" style="background: linear-gradient(45deg, {{ game.home.team_colors.primary }}, {{ game.away.team_colors.primary }});">
					<!-- Équipe Home -->
					<div class="flex flex-col items-center w-1/3">
						<div class="h-16 w-16 rounded-full" style="background-color: {{ game.home.team_colors.secondary }};"></div>
						<p class="mt-2 text-center font-semibold text-white">{{ game.home.name }}</p>
					</div>
					<!-- Informations du match -->
					<div class="w-1/3 text-center">
						<p class="font-bold text-sm text-white">VS</p>
						<p class="text-sm text-white mt-1">{{ game.scheduled|date('d/m/Y H:i') }}</p>
					</div>
					<!-- Équipe Away -->
					<div class="flex flex-col items-center w-1/3">
						<div class="h-16 w-16 rounded-full" style="background-color: {{ game.away.team_colors.secondary }};"></div>
						<p class="mt-2 text-center font-semibold text-white">{{ game.away.name }}</p>
					</div>
				</div>
			{% endfor %}
		</div>
	{% endif %}
{% endblock %}
