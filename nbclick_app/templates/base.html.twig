<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<script src="https://kit.fontawesome.com/5541b5eee9.js" crossorigin="anonymous"></script>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg navbar-light bg-light">
				<div
					class="container-fluid">
					<!-- Logo -->
					<a class="navbar-brand" href="#">
						<img src="{{ asset('img/logo.png') }}" alt="Logo" width="50" height="50" class="d-inline-block align-text-center">
						NBClick
					</a>

					<!-- Toggler for mobile view -->
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>

					<!-- Navbar links -->

					<div class="collapse navbar-collapse" id="navbarNav">

						{% if app.user %}


							<div class="collapse navbar-collapse" id="navbarNav">
								<ul class="navbar-nav ms-auto">
									<li class="nav-item">
										<a class="nav-link" href="{{path('app_main')}}">Home</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('app_matchs') }}">Matchs à venir</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('app_matchs_done') }}">Resultats des matchs</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{path('app_bets')}}">Mes paris</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{path('app_user_show')}}">Profil</a>
									</li>
								</ul>

								<!-- Buttons -->
								<div class="d-flex">
									<a href="{{path('app_user_edit')}}">
										<button class="btn btn-primary me-2" type="button">{{app.user.cashBalanceUser}}
											$</button>
									</a>
									<a href="{{path('app_logout')}}">
										<button class="btn btn-danger" type="button">Logout</button>
									</a>
								</div>
							</div>
						{% else %}


							<div class="collapse navbar-collapse" id="navbarNav">
								<ul class="navbar-nav ms-auto">
									<li class="nav-item">
										<a class="nav-link" href="{{path('app_main')}}">Home</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="{{ path('app_matchs') }}">Matchs</a>
									</li>

								</ul>

								<!-- Buttons -->
								<div class="d-flex">
									<a href="{{path('app_login')}}">
										<button class="btn btn-primary me-2" type="button">Login</button>
									</a>
								</div>
							</div>
						{% endif %}
					</div>
				</nav>

			</header>
			{% for message in app.flashes('error') %}
					<div class="alert alert-danger">
						{{ message }}
					</div>
				{% endfor %}
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
				{% endfor %}
			{% block body %}{% endblock %}
			<footer class="bg-light text-center py-4 mt-5">
				<div class="container">
					<div class="row align-items-center">
						<div class="col-md-4 mb-3 mb-md-0">
							<img src="{{ asset('img/logo.png') }}" alt="Logo" width="80" height="80" class="rounded-circle">
						</div>
						<div class="col-md-4">
							<p class="mb-0 fw-bold">NBClick</p>
							<p class="small text-muted">&copy;
								{{ "now"|date("Y") }}
								- Tous droits réservés.</p>
						</div>
						<div class="col-md-4">
							<a href="#" class="text-dark mx-2">
								<i class="fab fa-facebook fa-lg"></i>
							</a>
							<a href="#" class="text-dark mx-2">
								<i class="fab fa-twitter fa-lg"></i>
							</a>
							<a href="#" class="text-dark mx-2">
								<i class="fab fa-instagram fa-lg"></i>
							</a>
						</div>
					</div>
				</div>
			</footer>

			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
		</body>
	</body>
</html>
