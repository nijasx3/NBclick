{% extends 'base.html.twig' %}

{% block title %}Home page
{% endblock %}

{% block body %}
	<div class="container text-center mt-5">
		<h1 class="fw-bold">Bienvenue sur
			<span class="text-primary">NBClick</span>
			!</h1>
		<p class="lead" style='color:#ffffff'>Pariez sur les matchs NBA et suivez les résultats en direct.</p>

		<div class="row mt-5">
			<div class="col-md-6">
				<div class="card shadow border-0 my-3">
					<div class="card-body">
						<h5 class="card-title fw-bold">📅 Matchs à venir</h5>
						<p class="card-text">Consultez les prochains matchs NBA et préparez vos paris.</p>
						<a href="{{ path('app_matchs') }}" class="btn btn-primary">Voir les matchs</a>
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="card shadow border-0 my-3">
					<div class="card-body">
						{% if app.user %}
							<h5 class="card-title fw-bold">💵 💵 Mes paris</h5>
							<p class="card-text">Consultez vos paris en cours et vos gains potentiels.</p>
							<a href="{{path('app_bets')}}" class="btn btn-warning">Voir mes paris</a>
						{% else %}
							<h5 class="card-title fw-bold">🔐 Rejoignez-nous</h5>
							<p class="card-text">Inscrivez-vous dès maintenant et commencez à parier !</p>
							<a href="{{ path('app_register') }}" class="btn btn-success">S'inscrire</a>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
